<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_zero_margin"
    android:paddingLeft="@dimen/activity_horizontal_zero_margin"
    android:paddingRight="@dimen/activity_horizontal_zero_margin"
    android:paddingTop="@dimen/activity_vertical_zero_margin"
    tools:context=".Resources.ResourcesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/tabbar_selected_text_color">

        <!--第一行-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="美赛参考资料"
                android:id="@+id/usaReference"
                android:clickable="true"
                android:background="@color/resource_item_background"
                android:gravity="center"
                android:layout_margin="@dimen/metro_margin"
                android:layout_weight="0.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="国赛参考资料"
                android:id="@+id/domesticReference"
                android:clickable="true"
                android:background="@color/resource_item_background"
                android:gravity="center"
                android:layout_alignBottom="@+id/usaReference"
                android:layout_margin="@dimen/metro_margin"
                android:layout_weight="0.5" />
        </LinearLayout>

        <!--第二行-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.16" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="MATLAB资料"
                android:id="@+id/matlabReference"
                android:clickable="true"
                android:background="@color/resource_item_background"
                android:gravity="center"
                android:layout_margin="@dimen/metro_margin"
                android:layout_weight="0.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="MATLAB算法"
                android:id="@+id/matlabAlgorithm"
                android:clickable="true"
                android:background="@color/resource_item_background"
                android:gravity="center"
                android:layout_margin="@dimen/metro_margin"
                android:layout_weight="0.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.16" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="名师讲课视频"
                android:id="@+id/teachingVedio"
                android:clickable="true"
                android:background="@color/resource_item_background"
                android:gravity="center"
                android:layout_margin="@dimen/metro_margin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.2" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="学习资源分享区"
                android:id="@+id/resourceSharing"
                android:clickable="true"
                android:background="@color/resource_item_background"
                android:gravity="center"
                android:layout_margin="@dimen/metro_margin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.16" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="问题悬赏区"
                android:id="@+id/questions"
                android:clickable="true"
                android:background="@color/resource_item_background"
                android:gravity="center"
                android:layout_margin="@dimen/metro_margin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.16" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="离线资源"
                android:id="@+id/offLineResource"
                android:clickable="true"
                android:background="@color/resource_item_background"
                android:gravity="center"
                android:layout_margin="@dimen/metro_margin" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
