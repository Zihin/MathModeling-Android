<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/quiz_background1"
    >

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_1A000000"
        android:fillViewport="@bool/abc_config_closeDialogWhenTouchOutside"
        android:id="@+id/scrollView">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout">

            <TextView
                android:text="题  目"
                android:id="@+id/subTitle"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Question Desciption"
                android:id="@+id/question"
                android:textSize="15dp"
                android:background="#33FF4081"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:text="firstAnswer"
                    android:id="@+id/firstAnswer"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#44e8e8e8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:text="secondAnswer"
                    android:id="@+id/secondAnswer"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#44e8e8e8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:text="thirdAnswer"
                    android:id="@+id/thirdAnswer"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#44e8e8e8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:text="forthAnswer"
                    android:id="@+id/forthAnswer"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#44e8e8e8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:visibility="invisible"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/rightOrWrong"
                    android:scaleType="fitXY"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:visibility="invisible"
                    android:text="  答案解释  "
                    android:id="@+id/seeExplainationButton" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="#77e8e8e8"
                android:id="@+id/linearLayoutForExp"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/explaination"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Question Explaination"
                    android:textColor="@color/right_answer"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_weight="7"
        android:orientation="horizontal"
        android:background="#44e8e8e8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:text="上一题"
            android:id="@+id/preciousButton"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="#aab4b885"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:text="下一题"
            android:id="@+id/nextButton"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#aab4b885"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
